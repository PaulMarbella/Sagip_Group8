<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SagipResearch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SagipResearch.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid px-0">
        <!-- Top bar with hamburger (Mobile) -->
        <div class="d-md-none py-2 px-3 shadow-sm d-flex justify-content-between align-items-center bg-light">
            <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar" aria-label="Toggle navigation">
                <i class="bi bi-list fs-3"></i>
            </button>
            <a class="nav-link p-0" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Image/Logo.png" class="img-fluid" alt="SagipResearch Logo" style="max-height: 50px;" />
            </a>
        </div>

        <!-- Offcanvas Sidebar (Mobile) -->
        <div class="offcanvas offcanvas-start d-md-none" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
            <div class="offcanvas-header">
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body d-flex flex-column justify-content-between min-vh-100 px-3 pt-2 pb-4 mobile-sidebar">
                <!-- Navigation Items -->
                <nav>
                    <ul class="nav flex-column gap-3">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hourly" ? "active fw-bold" : "")" asp-controller="Hourly" asp-action="Index">
                                <i class="bi bi-hourglass"></i> HOURLY
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Daily" ? "active fw-bold" : "")" asp-controller="Daily" asp-action="Index">
                                <i class="bi bi-clock"></i> DAILY
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "active fw-bold" : "")" asp-controller="Messages" asp-action="Index">
                                <i class="bi bi-chat"></i> MESSAGES
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Map" ? "active fw-bold" : "")" asp-controller="Map" asp-action="Index">
                                <i class="bi bi-cloud"></i> RADAR
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Time & Logo -->
                <div class="text-center mt-5 mb-3 border-top pt-3">
                    <p class="fs-6 fw-bold mb-1" id="phTimeMobile"></p>
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/Image/Philippine logo.png" width="40" alt="Philippine Logo" class="mb-1" />
                        <h2 class="fs-6 fw-bold mb-0">Philippine</h2>
                        <h2 class="fs-6 mb-0">Time Zone</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-0 layout-container ">
            <!-- Static Sidebar (Desktop) -->
            <aside class="d-none d-md-flex col-md-2 sidebar text-white shadow p-3 flex-column justify-content-between min-vh-100">
                <div>
                    <a class="nav-link p-0 mb-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Image/Logo.png" class="img-fluid mx-auto" alt="SagipResearch Logo" style="max-width: 180px;" />
                    </a>
                    <nav>
                        <ul class="nav flex-column gap-4">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hourly" ? "active-custom  fw-bold" : "")" asp-controller="Hourly" asp-action="Index">
                                    <i class="bi bi-hourglass text-white"></i> HOURLY
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Daily" ? "active-custom fw-bold color:#aee7d0" : "")" asp-controller="Daily" asp-action="Index">
                                    <i class="bi bi-clock text-white"></i> DAILY
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "active-custom  fw-bold" : "")" asp-controller="Messages" asp-action="Index">
                                    <i class="bi bi-chat text-white"></i> MESSAGES
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-2  @(ViewContext.RouteData.Values["controller"]?.ToString() == "Map" ? "active-custom  fw-bold" : "")" asp-controller="Map" asp-action="Index">
                                    <i class="bi bi-cloud text-white"></i> RADAR
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

                <!-- Time & Logo -->
                <div class="text-center border-top pt-3">
                    <p class="fs-6 fw-bold mb-1" id="phTime"></p>
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/Image/Philippine logo.png" width="60" alt="Philippine Logo" class="mb-2" />
                        <h5 class="fw-bold mb-0">Philippine</h5>
                        <small class="text-muted">Time Zone</small>
                    </div>
                </div>
            </aside>

            <!-- Main Content -->
            <main class=" col p-4 main-content">
                <div class="shadow p-3 mb-4 text-center">
                    <h2 class="main-title">@ViewContext.RouteData.Values["controller"]</h2>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
