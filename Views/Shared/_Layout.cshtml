<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SagipResearch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SagipResearch.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid px-0">
        <!-- Top bar with hamburger -->
        <div class="d-md-none bg-white py-2 px-3 shadow-sm">
            <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
                &#9776;
            </button>
        </div>

        <!-- Sidebar for small screens (offcanvas) -->
        <!-- Sidebar for small screens (offcanvas) -->
        <div class="offcanvas offcanvas-start d-md-none mobile-sidebar" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel" style="max-width: 250px;">
            <div class="offcanvas-header">
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="offcanvas-body d-flex flex-column justify-content-between min-vh-100 px-3 pt-2 pb-4">
                <!-- Logo -->
                <a class="nav-link text-danger p-1 text-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Image/Logo.png" width="140" class="mb-4 img-fluid" asp-append-version="true" />
                </a>

                <!-- Nav Items -->
                <ul class="nav flex-column gap-3">
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-hourglass text-light me-2"></i>
                        <a class="nav-link p-0" asp-controller="Hourly" asp-action="Index">HOURLY</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-clock text-light me-2"></i>
                        <a class="nav-link p-0" asp-controller="Daily" asp-action="Index">DAILY</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-chat text-light me-2"></i>
                        <a class="nav-link p-0" asp-controller="Messages" asp-action="Index">MESSAGES</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-cloud text-light me-2"></i>
                        <a class="nav-link p-0" asp-controller="Map" asp-action="Index">RADAR</a>
                    </li>
                </ul>

                <!-- Time & Logo (bottom section) -->
                <div class="text-center text-dark mt-5 mb-5 border-top border-1 border-dark pt-3">
                    <p class="fs-6 fw-bold mb-1" id="phTimeMobile"></p>
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/Image/Philippine logo.png" width="40" alt="Philippine Logo" class="mb-1" />
                        <h2 class="fs-6 fw-bold mb-0">Philippine</h2>
                        <h2 class="fs-6 mb-">Time Zone</h2>
                    </div>
                </div>
            </div>
        </div>



        <div class="row g-0">
            <!-- Static Sidebar for desktop -->
            <div class="sidebar d-none d-md-flex col-md-2 shadow p-3 flex-column align-items-center justify-content-between min-vh-100">
                <a class="nav-link text-danger p-1" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Image/Logo.png" width="180" class="mb-4 img-fluid" asp-append-version="true" />
                </a>
                <ul class="nav w-100 gap-3">
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-hourglass text-light"></i>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hourly" ? "text-white" : "")"
                           asp-controller="Hourly" asp-action="Index">
                            HOURLY
                        </a>
                    </li>

                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-clock text-light"></i>
                        <a class="nav-link text-center
            @(ViewContext.RouteData.Values["controller"]?.ToString() == "Daily" ? "text-white" : "nav-link")"
                           asp-controller="Daily" asp-action="Index">
                            DAILY
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-chat text-light"></i>
                        <a class="nav-link   text-center
            @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "text-white" : "nav-link")"
                           asp-controller="Messages" asp-action="Index">
                            MESSAGES
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <i class="bi bi-cloud text-light"></i>
                        <a class="nav-link  text-center
            @(ViewContext.RouteData.Values["controller"]?.ToString() == "Map" ? "text-white" : "nav-link")"
                           asp-controller="Map" asp-action="Index">
                            RADAR
                        </a>
                    </li>
                </ul>


                <div class="text-center text-white mt-5 border-top border-1 border-dark py-3 d-flex justify-content-center align-items-center gap-4">
                    <div>
                        <p class="fs-6 fw-bold mb-0" id="phTime"></p>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/Image/Philippine logo.png" alt="Philippine Logo">
                        <h2 class="fs-6 fw-bold mb-1">Philippine</h2>
                        <h2 class="fs-6 mb-0">Time Zone</h2>
                    </div>
                </div>



            </div>

            <!-- Main content -->
            <main class="col-12 col-md-10 p-4 ">
                <div class="shadow w-100 p-3 mb-4 text-center">
                    <h2 class="main-title">@ViewContext.RouteData.Values["controller"]</h2>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
