@model List<Message>

<div class="container-fluid">

    <div class="container">

        <!-- Messages Display -->
        <div id="messageList" class="border p-3 mb-3 bg-light rounded" style="height: 300px; overflow-y: auto;">
            @foreach (var msg in Model)
            {
                <div class="mb-2 p-2 border rounded">
                    <strong class="text-primary">@msg.Sender:</strong> @msg.Text
                </div>
            }
        </div>

        <!-- Message Input -->
        <div class="input-group">
            <input type="text" id="username" class="form-control" placeholder="Your Name">
            <input type="text" id="messageInput" class="form-control" placeholder="Type your message">
            <button id="sendMessage" class="btn btn-primary">Send</button>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

        <script>
            var connection = new signalR.HubConnectionBuilder().withUrl("/messageHub").build();

            connection.start().then(function () {
                console.log("✅ Connected to SignalR Hub");
            }).catch(function (err) {
                console.error("❌ SignalR Connection Error:", err.toString());
            });

            // Receive messages and update the UI
            connection.on("ReceiveMessage", function (user, message) {
                var newMessage = `<div class="mb-2 p-2 border rounded">
                                    <strong class="text-primary">${user}:</strong> ${message}
                                  </div>`;
                $("#messageList").append(newMessage);
                $("#messageList").scrollTop($("#messageList")[0].scrollHeight);
            });

            // Send message to the server
            $("#sendMessage").click(function () {
                var user = $("#username").val().trim();
                var message = $("#messageInput").val().trim();

                if (!user || !message) return;

                $.post("/Messages/SendMessage", { sender: user, text: message }, function () {
                    connection.invoke("SendMessage", user, message)
                        .catch(function (err) {
                            console.error("❌ Error sending message:", err.toString());
                        });
                });

                $("#messageInput").val("").focus();
            });
        </script>
    }
</div>
